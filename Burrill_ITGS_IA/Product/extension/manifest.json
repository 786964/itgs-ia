{
    "manifest_version": 2,
    "name": "Ezier Vet",
    "description": "A WebExtension that provides tools for working with EzyVet",
    "version": "1.0.0",
    "icons": {
        "48": "icons/cat.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["dist/content.js"]
        }
    ],
    "permissions": [
        "<all_urls>"
    ],
    "browser_action": {
        "default_icon": "icons/cat.png",
        "default_popup": "html/menu.html"
    }
}

